
<html>
<body>
<% if flash[:notice] %>
    <div class="flash">
        <%= flash[:notice] %>
	</div>
<% end %>

<h3>Books</h3>


<table>
	    <tr>
    	<th>Title</th>
    	<th>Body</th>
	</tr>

 <% @blogs.each do |blog| %>
	<tr>
    <td><span><%= blog.title %></span></td>
    <td><span><%= blog.body %></span></td>
    <td>
     <%= link_to "Show", blog_path(blog.id),class: "font show_#{blog.id}" %></td>
     <td><%= link_to "Edit", edit_blog_path(blog.id),class: "font edit_#{blog.id}" %></td>
    <td> <%= link_to "Destroy", destroy_blog_path(blog.id), method: :delete, "data-confirm" => "Are you sure?",class: "font destroy_#{blog.id}" %>
	</td>
    </tr>

 <% end %>
</table>


<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@blog) do |f| %>

<div class="field">
	<label for="blog_title">Title</label>
<%= f.text_field :title, class: "book_title" %>
</div>
<div class="field">
<label for="blog_body">Body</label>
<%= f.text_area :body, class: "book_body" %>
</div>
<div class="action">
<%= f.submit 'Create Book' %>
</div>
<% end %>
</body>
</html>

